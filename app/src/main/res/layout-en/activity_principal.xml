<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.williamgomez.turismo_turbo.Principal"
    android:orientation="vertical">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/turbom1en"
        android:id="@+id/boton1"
        android:onClick="boton1function"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/turbom2en"
        android:id="@+id/boton2"
        android:onClick="boton2function"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/turbom3en"
        android:id="@+id/boton3"
        android:onClick="boton3function"/>



    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/turbom4en"
        android:id="@+id/boton4"
        android:onClick="boton4function"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#66a8cf">

    </LinearLayout>

</LinearLayout>